# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                    controllers.Application.index
GET         /register            controllers.Application.register
GET         /login               controllers.Application.login

POST        /addUser             controllers.UserController.addUser
GET         /welcomeUser         controllers.UserController.welcomeUser
GET         /welcomeEmployee     controllers.UserController.welcomeEmployee
GET         /attemptFailed       controllers.UserController.attemptFailed
GET         /attemptSuccessful   controllers.UserController.attemptSuccessful
GET         /showUsers           controllers.UserController.showUsers
GET         /loginUser           controllers.UserController.loginUser
GET         /logoutUser          controllers.UserController.logoutUser


GET         /showMenu            controllers.EditMenuController.showMenu
GET         /editMenu            controllers.EditMenuController.editMenu
POST        /addToMenu           controllers.EditMenuController.addToMenu
POST        /addToBill           controllers.BillController.addToBill
GET         /showBill            controllers.BillController.showBill
GET         /showBillWhenOrderIsCanceled    controllers.BillController.showBillWhenOrderIsCanceled
GET         /addToHistory        controllers.OrderHistoryController.addToHistory
GET         /showOrdersUser      controllers.OrderHistoryController.showOrdersUser
GET         /showOrdersEmployee  controllers.OrderHistoryController.showOrdersEmployee

# REST API
GET         /api                 rest.Api.api
GET         /api/users           rest.Users.users
GET         /api/user/:id        rest.Users.user(id: Long)
POST        /api/user            rest.Users.addUser
DELETE      /api/user/:id        rest.Users.rmUser(id: Long)

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file        controllers.Assets.at(path="/public", file)
